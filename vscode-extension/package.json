{
    "name": "avalonia",
    "displayName": "Avalonia",
    "description": "",
    "version": "0.0.1",
    "publisher": "kekekeks",
    "engines": {
        "vscode": "^1.52.0"
    },
    "categories": [
        "Other"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/kekekeks/Avalonia.Ide.git"
    },
    "bugs": {
        "url": "https://github.com/kekekeks/Avalonia.Ide/issues"
    },
    "activationEvents": [
        "onLanguage:xaml"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "xaml",
                "extensions": [
                    ".xaml",
                    ".axaml"
                ],
                "aliases": [
                    "XAML"
                ]
            }
        ]
    },
    "scripts": {
        "test": "mocha -u tdd ./out/tests/; node_modules/.bin/mocha --require jsdoctest out/extension.js",
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint . --ext .ts,.tsx",
        "watch": "tsc -w -p ./"
    },
    "devDependencies": {
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.0.0",
        "@types/node": "^14.0.27",
        "@types/vscode": "^1.52.0",
        "@typescript-eslint/eslint-plugin": "^3.8.0",
        "@typescript-eslint/parser": "^3.8.0",
        "eslint": "^7.6.0",
        "glob": "^7.1.6",
        "mocha": "^8.0.1",
        "typescript": "^3.8.3",
        "vscode-test": "^1.4.0"
    },
    "dependencies": {
        "child-process": "^1.0.2",
        "vscode-languageclient": "^5.2.1"
    }
}
